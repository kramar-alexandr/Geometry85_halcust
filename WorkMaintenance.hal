global updating // новая процедура
function boolean POItemDelete(longint ordernr)
begin
boolean res,TrHs,testf;
record POItemVc ROr,ROR2r;
integer i;
	TrHs=true;
	testf=true;
	ROr.PONr=ordernr;
	while LoopMain(ROr,1,TrHs) begin
		if ROr.PONr>ordernr then begin
			TrHs=false;
			testf=false;
