global updating procedure UpdClassMn(record RcVc RepSpec)// Edit ************************** BPI Ukraine - KramarAlexandr - Friday, 25 May 2018 17:16:32
begin
	record PRVc PRr;
	boolean testf;
	integer pos;
	string 100 tempclass,tstr;
	
	if(nonblank(RepSpec.f1) and nonblank(RepSpec.f2))then begin
