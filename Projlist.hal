procedure SerchQTbyProject(string prcode,var longint qtnr,var boolean foundf) //   По коду проекта находит подтверждённый QT (берёт первый попавшийся, подтверждённый QT так как предпологается что таковая запись в базе только одина)
begin
Boolean TrHr;
record QTVc QTr;
  qtnr=-1;
  foundf=false;
  TrHr=true;
  QTr.PRCode=prcode;
  while LoopKey("PRCode",QTr,1,TrHr) begin
    if QTr.PRCode!=prcode then begin
    TrHr=false;
    end;
    if TrHr then begin
      if QTr.Rejected==2 then begin
      foundf=true;
      TrHr=false;
      qtnr=QTr.SerNr;
      end;
    end;
  end;
  return;
end;

