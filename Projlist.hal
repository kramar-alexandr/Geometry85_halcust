procedure HTProjects(string arg,var string res) // standard
begin
  string 255 a,b;
  record PRVc PRr;

  a = FirstInRange(arg,20);
  b = LastInRange(arg,20);
  if (blank(a) and blank(b)) then begin
    res = USetStr(4851);
  end else begin
    res = USetStr(4852);
    res = res & a;
    if (a<>b) then begin
      res = res & " : ";
      res = res & b;
    end else begin
      PRr.Code = a;
      if (ReadFirstMain(PRr,1,true)) then begin
        res = res & " ";
        res = res & PRr.Name;
      end;
    end;
  end;
  return;
end;

